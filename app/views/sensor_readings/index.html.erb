<p id="notice"><%= notice %></p>

<h1>Sensor Readings</h1>

<table>
  <thead>
    <tr>
      <th>Motion</th>
      <th>Infrared</th>
      <th>Light</th>
      <th>Temperature</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sensor_readings.each do |sensor_reading| %>
      <tr>
        <td><%= sensor_reading.motion %></td>
        <td><%= sensor_reading.infrared %></td>
        <td><%= sensor_reading.light %></td>
        <td><%= sensor_reading.temperature %></td>
        <td><%= link_to 'Show', sensor_reading %></td>
        <td><%= link_to 'Edit', edit_sensor_reading_path(sensor_reading) %></td>
        <td><%= link_to 'Destroy', sensor_reading, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

