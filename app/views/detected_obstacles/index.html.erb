<div class="row content-header">
  <h3 class="col-xs-9">
    Room Sensor Readings
  </h3>
  <div class="col-xs-3 action-buttons text-right">
      <small><i class="fa fa-plus"></i> Sensor readings appear here </small>
  </div>
</div>
<div class="row">
  <div class="col-md-9">
    <% if @detected_obstacles.present? %>
    <div class="panel panel-default">
      <div class="panel-heading">
        All Detected Sensor Readings
      </div>
      <div class="panel-body">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th align="center">Time</th>
              <th align="center">Distance in Centimeters</th>
              <th align="center">Image</th>
            </tr>
          </thead>

          <tbody>
            <% @detected_obstacles.each do |detected_obstacle| %>
              <tr>
                <td><%= detected_obstacle.timestamps.strftime('%B %d, %Y: %H:%M %Z') || 'Time not Recorded' %></td>
                <td align="center"><%= detected_obstacle.distance || 'Distance not Recorded' %></td>
                <td align="center"><%= 'No Image yet' %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="text-center">
          <%= will_paginate @detected_obstacles, renderer: BootstrapPagination::Rails %>
        </div>
      </div>
    </div>

    <% else %>
      <h3>No Objects detected yet</h3>
    <% end %>
  </div>
  <!-- count -->

  <div class="col-lg-3">
   <div class="panel panel-default">
     <div class="panel-heading">
       <h4 align="center">Detected Obstacles Count</h4>
     </div>
       <div class="panel-body">
         <h1 align="center"><%= @detected_obstacles.count %></h1>
       </div>
      <div class="divider"></div>
       <div class="panel-footer action">
         <h5 align="center">Tracking Ninja Count</h5>
       </div>
   </div>
 </div>
  <!-- count end -->
